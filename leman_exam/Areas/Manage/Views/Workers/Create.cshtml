@model Workers

<div class="container">
 <div class="row">
        <form method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label asp-for="FullName" class="form-label">FullName</label>
    <input asp-for="FullName" class="form-control" />
    <span asp-validation-for="FullName" style="color:red"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Position" class="form-label">Designation</label>
    <input asp-for="Position" class="form-control" />
    <span asp-validation-for="Position" style="color:red"></span>
  </div>

  <div class="mb-3">
    <label asp-for="ImgFile" class="form-label">ImgFile</label>
    <input asp-for="ImgFile" class="form-control" accept=".jpg , .png , .jpeg"/>
    <span asp-validation-for="ImgFile" style="color:red"></span>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
 </div>
</div>
